# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/streetfood_vendor_platform

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_complex
JWT_REFRESH_SECRET=your_refresh_token_secret_here_also_make_it_complex

# Authentication will use simple username/password without OTP

# Frontend URL
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OTP Configuration
OTP_EXPIRY_MINUTES=10

# Gemini AI Configuration (for price predictions and insights)
GEMINI_API_KEY=your_gemini_api_key_here

# External API Keys (for market data)
COMMODITY_API_KEY=your_commodity_api_key
WEATHER_API_KEY=your_weather_api_key

# Redis Configuration (for session management and caching)
REDIS_URL=redis://localhost:6379

# Payments removed - no payment gateway needed

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Push notifications removed

# Socket.IO Configuration
SOCKET_IO_ORIGINS=http://localhost:3000

# Cloudinary Configuration (for image storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log
